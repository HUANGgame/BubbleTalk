    <Button
        android:id="@+id/btn_start"
        android:layout_width="196dp"
        android:layout_height="229dp"
        android:background="@android:color/transparent"
        android:text="開始      ㄎㄞ ㄕˇ"
        android:textColor="#E06B45"
